<!DOCTYPE html>
<html>
<head>
    <meta name="Home" content="Used to redirect to login or redirect to the website">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Home </title>
    <link rel="stylesheet" href="/styles/home.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@1,200&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>

</head>
<body style="margin: 0px;">
    <header>
        <img src="/images/logo.png" alt="Logo">
        <h1> Coursewhere </h1>

        
        <button type="button"><a href="/login">Login</a></button>  
        <button type="button"><a href="/register">Register </a></button>
        
    </header>

   <main>
        <div class="video-container" ng-app="myApp" ng-controller="myCtrl">
            <video id="my-video" class="video-js" preload="metadata" width="1280" height="720">
                <source src="/videos/Coursewhere-intro.mp4" type="video/mp4" />
            </video>
            <div class="controls">
                <button class="ctrl" ng-click="skip(-20)">Rewind 20s</button>
                <button class="ctrl" ng-click="skip(20)">Jump 20s</button>
                <button class="ctrl" ng-click="pauseVid()">Pause</button>
                <button class="ctrl" ng-click="playVid()">Play</button>
                <button class="ctrl" ng-click="restart()">Restart</button>
            </div>
        </div>
    </main>

    <footer>
        <li>
            <ul>
                205002038
            </ul>
            <ul>
                Harish
            </ul>
        </li>
    </footer>
</body>
<script>
    angular.module('myApp', [])
    .controller('myCtrl', ['$scope', function($scope) {
    var videoElement = document.getElementById('my-video');
    
    $scope.skip = function(seconds) {
      videoElement.currentTime += seconds;
    };
    
    $scope.pauseVid = function() {
      videoElement.pause();
    };
    
    $scope.playVid = function() {
      videoElement.play();
    };
    
    $scope.restart = function() {
      videoElement.currentTime = 0;
      videoElement.play();
    };
  }]);



</script>

</html>
